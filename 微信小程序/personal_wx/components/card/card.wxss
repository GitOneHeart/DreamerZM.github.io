/* components/card/card.wxss */
.block{
  width:715rpx;
  height:430rpx;
  border:1px solid #CBCBCB;
  margin-bottom:80rpx;
  box-shadow:0px 3px 15px #888888;
  border-radius:0 0 14rpx 14rpx;
}
.block-title{
  display: inline-block;
  border-bottom: 1px solid #7b7b7b;
  width: 100%;
  background-color: #000;
  text-align:center;

}
.block-title-img{
  width:40rpx;
height:40rpx;
float:right;
margin-top:15rpx;
margin-bottom:15rpx;
margin-right: 15rpx

}
.block-title-text{
  display: inline-block;
  color: #D8D8D8;
  line-height: 70rpx;
  margin-left: 48rpx
}

.block-content{
  overflow: hidden;
  height:372rpx;
  border-radius:0 0 14rpx 14rpx;
}
.content-img{
  height: 372rpx;
  border-radius:0 0 14rpx 14rpx;
}
.no-img{
  width: 100%;
  height: 372rpx;
  border-radius:0 0 14rpx 14rpx;
  text-align: center;
  color: rgb(82, 82, 82);
  font-size: 100rpx;
  line-height: 372rpx;
  font-weight: 600;
  text-decoration:line-through
}